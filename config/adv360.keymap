#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/stp.h>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    behaviors {
      #include "macros.dtsi"
      #include "version.dtsi"

      hm: homerow_mods {
          compatible = "zmk,behavior-hold-tap";
          label = "HOMEROW_MODS";
          #binding-cells = <2>;
          tapping-term-ms = <200>;
          quick_tap_ms = <175>;
          flavor = "tap-preferred";
          bindings = <&kp>, <&kp>;
      };
    };

  keymap {
    compatible = "zmk,keymap";

    default_layer {
      display-name = "Base";
      bindings = <
        &kp EQUAL &kp N1    &kp N2    &kp N3   &kp N4    &kp N5 &tog 1                                                                 &mo 3            &kp N6 &kp N7   &kp N8 &kp N9   &kp N0   &kp BSLH
        &kp TAB   &kp SQT   &kp COMMA &kp DOT  &kp P     &kp Y  &kp C_VOL_UP                                                           &kp C_MUTE       &kp F  &kp G    &kp C  &kp R    &kp L    &kp FSLH
        &kp ESC   &kp A     &kp O     &kp E    &kp U     &kp I  &kp C_VOL_DN          &kp LCTRL &kp LALT &kp LGUI  &kp RCTRL           &kp C_PLAY_PAUSE &kp D  &kp H    &kp T  &kp N    &kp S    &kp MINUS
        &kp LSHFT &kp SEMI  &kp Q     &kp J    &kp K     &kp X                                  &kp HOME &kp PG_UP                                      &kp B  &kp M    &kp W  &kp V    &kp Z    &kp RSHFT
        &mo 2     &kp GRAVE &kp CAPS  &kp LEFT &kp RIGHT                     &kp BSPC &kp DEL   &kp END  &kp PG_DN &kp ENTER &kp SPACE                         &kp DOWN &kp UP &kp LBKT &kp RBKT &mo 2
      >;
    };
    keypad {
      display-name = "Kp";
      bindings = <
        &none  &none &none &none  &none  &none &trans                                                              &trans    &none &kp KP_NUM &kp KP_EQUAL &kp KP_DIVIDE &kp KP_MULTIPLY &kp PRINTSCREEN
        &trans &none &none &none  &none  &none &trans                                                              &trans    &none &kp KP_N7  &kp KP_N8    &kp KP_N9     &kp KP_MINUS    &kp SCROLLLOCK
        &trans &none &none &none  &none  &none &trans          &kp LCTRL &kp LALT &kp LGUI  &kp RCTRL              &trans    &none &kp KP_N4  &kp KP_N5    &kp KP_N6     &kp KP_PLUS     &none
        &trans &none &none &none  &none  &none                           &kp HOME &kp PG_UP                                  &none &kp KP_N1  &kp KP_N2    &kp KP_N3     &kp KP_ENTER    &trans
        &to 2  &to 0 &to 4 &trans &trans              &kp BSPC &kp DEL   &kp END  &kp PG_DN &kp KP_ENTER &kp KP_N0                 &trans     &trans       &kp KP_DOT    &kp KP_ENTER    &to 2
      >;
    };
    fn {
      display-name = "Fn";
      bindings = <
        &kp F1 &kp F2 &kp F3 &kp F4 &kp F5 &kp F6 &trans                                           &trans &kp F7 &kp F8 &kp F9 &kp F10 &kp F11 &kp F12
        &trans &trans &trans &trans &trans &trans &trans                                           &trans &trans &trans &trans &trans  &trans  &trans
        &trans &trans &trans &trans &trans &trans &trans        &trans &trans &trans &trans        &trans &trans &trans &trans &trans  &trans  &trans
        &trans &trans &trans &trans &trans &trans                      &trans &trans                      &trans &trans &trans &trans  &trans  &trans
        &trans &trans &trans &trans &trans               &trans &trans &trans &trans &trans &trans               &trans &trans &trans  &trans  &trans
      >;
    };
    mod {
      display-name = "Mod";
      bindings = <
        &none          &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &none                                                                    &trans       &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &none
        &none          &none        &none        &none        &none        &none        &bootloader                                                              &bootloader  &none        &none        &none        &none        &none        &none
        &studio_unlock &none        &none        &none        &none        &none        &none             &bt BT_CLR &none &bt BT_CLR &bt BT_CLR                 &stp STP_BAT &none        &none        &none        &none        &none        &none
        &none          &none        &none        &none        &macro_ver   &none                                     &none &none                                              &none        &none        &none        &none        &none        &none
        &none          &none        &none        &none        &none                                 &none &none      &none &none      &bl BL_TOG &rgb_ug RGB_TOG                           &bl BL_DEC   &bl BL_INC   &none        &none        &none
      >;
    };
    QWERTY {
      display-name = "QWERTY";
      bindings = <
        &trans &trans &trans &trans &trans &trans &trans                                           &trans &trans &trans &trans    &trans  &trans   &kp MINUS
        &trans &kp Q  &kp W  &kp E  &kp R  &kp T  &trans                                           &trans &kp Y  &kp U  &kp I     &kp O   &kp P    &kp BSLH
        &trans &kp A  &kp S  &kp D  &kp F  &kp G  &trans        &trans &trans &trans &trans        &trans &kp H  &kp J  &kp K     &kp L   &kp SEMI &kp SQT
        &trans &kp Z  &kp X  &kp C  &kp V  &kp B                       &trans &trans                      &kp N  &kp M  &kp COMMA &kp DOT &kp FSLH &trans
        &trans &trans &trans &trans &trans               &trans &trans &trans &trans &trans &trans               &trans &trans    &trans  &trans   &trans
      >;
    };
    extra1 { 
      display-name = "Red";    
      status = "reserved";
    };

    extra2 { 
      display-name = "Purple";    
      status = "reserved";
    };

    extra3 { 
      display-name = "Cyan";    
      status = "reserved";
    };

    extra4 { 
      display-name = "Yellow";    
      status = "reserved";
    };
  };
};
